<%= render '/layouts/bidders' %>

<br>
<br>
<div class="center" style="text-align:center">
  <div class="container panel-a panel-body">
    <div class="form" style="color:midnightblue">

    <%= form_for bidder do |f| %>
      <%= f.label :name, "Company Name" %><br>
      <%= f.text_field :name %>
      <br><br>
      <%= f.label :email,"Company Email" %><br>
      <%= f.text_field :email %>
      <br><br>
      <%= f.label :website,"Company Website" %><br>
      <%= f.text_field :website %><br><br>
      <div class="actions">
        <%= f.submit %>
      </div>
      </div>
    <% end %>
    <br>
    <br>
    <br>
    <br>
    <br>
    <div id="bidderResult">
      <br>
      <br>
      <h1 id="name"></h1>
      <p id="email"></p>
      <p id="website"></p>
    </div>

  </div>
</div>
