<%= render '/vacations/layout' %>

<div class="center" style="text-align:center">
  <div class="container">
    <div class="panel-a" text-black>
      <div class="panel-body">
        <div class="form" style="color:lightblue">



          <h1><%= @vacation.name %></h1>

          <%= form_for @vacation_attraction, url: vacation_vacation_attractions_path(@vacation) do |f| %>
            <h4><%= f.label :attraction_id, "Update Attractions" %></h4><br>
            <%= f.collection_check_boxes :attraction_id, @attractions.uniq.sort_by(&:name), :id, :name, value:true %>
            <br><br><br><br>
            <%= f.submit "Update" %>
          <% end %>



        </div>
      </div>
    </div>
  </div>
</div>
