<%= render 'layout' %>
<br><br>
<div class="center" style="text-align:center">
  <div class="container">
    <div class="panel-a" text-black>
      <div class="panel-body">
        <div class="form" style="color:lightblue">


        <%= form_for bucket_list_item do |f| %>
          <%= f.label :name %><br>
          <%= f.text_field :name %>
          <br><br>
          <%= f.label :notes %><br>
          <%= f.text_area :notes %>
          <br><br>
          <%= f.hidden_field :user_id, :value => user.id %>
          <div style="color:black">
          <%= f.submit %>
          </div>
        <% end %>
        <br><br><br><br><br>


      </div>
    </div>
  </div>
</div>
