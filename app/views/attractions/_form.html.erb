<%= render 'layout' %>


<br><br>
<div class="center" style="text-align:center">
  <div class="container">
    <div class="panel-a" text-black>
      <div class="panel-body">
        <div class="form" style="color:midnightblue">


        <%= form_for attraction do |f| %>

        <div class="field<%= ' field_with_errors' if attraction.errors[:name].any? %>">
          <div class="center" style="text-align:center">
            <%= f.label :name %><br>
            <%= f.text_field :name %>
          </div>
        </div>
        <br>
        <br>


        <div class="field<%= ' field_with_errors' if attraction.errors[:website].any? %>">
          <div class="center" style="text-align:center">
            <%= f.label :website %><br>
            <%= f.text_field :website %>
          </div>
        </div>
        <br>
        <br>

        <div class="field<%= ' field_with_errors' if attraction.errors[:city].any? %>">
          <div class="center" style="text-align:center">
            <%= f.label :city %><br>
            <%= f.text_field :city %>
          </div>
        </div>
        <br>
        <br>

        <div class="center" style="text-align:center">
          <%= f.label :state %><br>
          <%= select_tag :state, options_for_select(us_states), {prompt: "Optional, for U.S."} %>

        <br>
        <br>

        <div class="field<%= ' field_with_errors' if @attraction.errors[:country].any? %>">
          <div class="center" style="text-align:center">
            <%= f.label :country %><br>
            <%= country_select("user", "country_name" [ "United States"], {prompt: "Required"})%>
          </div>
        </div>
        <br>
        <br>


        <%= f.submit %>

        <% end %>
        <br><br><br><br><br>


      </div>
    </div>
  </div>
</div>
