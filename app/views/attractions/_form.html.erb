<%= render 'layout' %>


<br><br>
<div class="center" style="text-align:center">
  <div class="container">
    <div class="panel-a" text-black>
      <div class="panel-body">
        <div class="form" style="color:midnightblue">


        <%= form_for attraction do |f| %>

        <div class="field<%= ' field_with_errors' if attraction.errors[:name].any? %>">
          <div class="center" style="text-align:center">
            <%= f.label :name %><br>
            <%= f.text_field :name %>
          </div>
        </div>
        <br>
        <br>

        <%= f.fields_for @attraction_category, url: attraction_categories_path do |ac| %>
         p><%= ac.label :category_id, "Update Categories" %><br>
           <%= ac.collection_select :category_id, Category.all.sort_by(&:name), :id, :name, :prompt => "Select One" %>
       <% end %>


        <div class="field<%= ' field_with_errors' if attraction.errors[:website].any? %>">
          <div class="center" style="text-align:center">
            <%= f.label :website %><br>
            <%= f.text_field :website %>
          </div>
        </div>
        <br>
        <br>

        <div class="field<%= ' field_with_errors' if attraction.errors[:city].any? %>">
          <div class="center" style="text-align:center">
            <%= f.label :city %><br>
            <%= f.text_field :city %>
          </div>
        </div>
        <br>
        <br>

        <div class="center" style="text-align:center">
          <%= f.label :state %><br>
          <%= f.text_field :state %>

        <br>
        <br>

        <div class="field<%= ' field_with_errors' if @attraction.errors[:country].any? %>">
          <div class="center" style="text-align:center">
            <%= f.label :country %><br>
            <%= f.text_field :country %><br>
          </div>
        </div>
        <br>
        <br>

        <div class="field<%= ' field_with_errors' if @attraction.errors[:notes].any? %>">
          <div class="center" style="text-align:center">
            <%= f.label :notes %><br>
            <%= f.text_area :notes %><br>
          </div>
        </div>
        <br>
        <br>



        <%= f.submit %>

        <% end %>
        <br><br><br><br><br>


      </div>
    </div>
  </div>
</div>
